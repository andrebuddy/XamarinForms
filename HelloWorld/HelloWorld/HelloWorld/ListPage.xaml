                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Status}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>